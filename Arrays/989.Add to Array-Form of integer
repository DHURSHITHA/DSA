class Solution {
    public List<Integer> addToArrayForm(int[] num, int k) {
        int rem=0;
        ArrayList<Integer> arr=new ArrayList<>();
        int sum=0;
        for(int i=num.length-1;i>=0;i--)
        {
            //System.out.println(arr);
            if(k!=0)
            {
                 sum=num[i]+k%10+rem;
                 rem=0;
                 k/=10;
            }
            else
            {
                if(rem==0)
                {
                    sum=num[i];
                }
                else
                {
                    sum=num[i]+rem;
                    rem=0;
                }
            }
            if(sum<=9)
            {
                if(rem==0)
                arr.add(sum);
                else
                {
                    sum=sum+rem;
                    rem=0;
                    if(sum<=9)
                    {
                        arr.add(sum);
                    }
                    else
                    {
                        arr.add(sum%10);
                        rem=sum/10;
                    }
                }
            }
            else
            {
                arr.add(sum%10);
                rem=sum/10;
            }
           
        }
        if(k!=0)
        {
            while(k!=0)
            {
                if(rem==0)
                {
                    arr.add(k%10);
                    k/=10;
                }
                else
                {
                    sum=k%10+rem;
                    k/=10;
                    if(sum<=9)
                    {
                        arr.add(sum);
                        rem=0;
                    }
                    else
                    {
                        arr.add(sum%10);
                        rem=sum/10;
                    }
                }
            }
        }
        if(rem!=0)
        {
            arr.add(rem);
        }
        Collections.reverse(arr);
            //System.out.println(arr);
        
        return arr;
    }
    
}
